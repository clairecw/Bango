<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="clairecw.bango.RefActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:text='End Game'
            android:textStyle="bold"
            tools:layout_alignLeft="@id/relativeLayout"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="Click an item to mark in the game when someone calls bango their board will be tested against this master list"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:textAlignment="center" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop = "40dp"
            android:layout_centerHorizontal="true"
            android:text="Referee Controls"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="350dp"

            android:layout_below="@+id/textView7"
            android:layout_marginTop="22dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
